<%- include("partials/header") %>
<h1><%= title %></h1>
  <form method="POST" action="/articles/add">
    <div class="form-group">
      <label>Název:</label>
      <input name="title" type="text" class="form-control">
    </div>
    <div id="pokus" class="form-group">
      <label>Pro koho:</label>
      <select id="select" class="form-control" onchange="showUserId()">
        <option value="empty">Vyber</option>
          <% users.forEach(function(user) { %>
              <option value="<%= user._id %>" id="<%= user._id %>">
                  <%= user.name %>
              </option>
          <% }); %>
        </select>
      <input id="worker" name="worker" type="text" class="form-control">
    </div>
    <div class="form-group">
      <label>Obsah:</label>
      <textarea name="body" class="form-control"></textarea>
    </div><br/>
    <input type="submit" value="Přidat" class="btn btn-primary">
  </form>
<%- include("partials/footer") %>